script(src='js/portfolio.js')
div#Portfolio(align="center")
    input(type="search" list="portfolios" id="portfolioName" placeholder="Portfolio Name" autofocus onchange="loadPortfolio();")
    datalist#portfolios
        option RRSP
        option TFSA
        option Margin
        option Watch
    label
        | &nbsp;Since
        input(type="date",id="PortfolioSince" onkeypress="if (event.keyCode==13) { loadPortfolio(); }" onchange="loadPortfolio();")
        input(value="true" type="checkbox" id="ShowClosePos" onclick="loadPortfolio(); return true;")
        | Show Closed Position
    br
    div(style="width:85%")
        table#portfolio.display(cellpadding="0" cellspacing="0" border="0" align="center")
            thead
                tr
                    th(width="80px") Ticker
                    th Name
                    th Position
                    th Mkt Value
                    th Last Price
                    th Avg. Cost
                    th Annu Retrun
                    th(nowrap) Daily P&L
                    th Current P&L
                    th Overall P&L
            tbody
            tfoot
                tr
                    th
                        input(type="search",size="5",placeholder='Search',onsearch="$('#portfolio').dataTable().fnFilter(this.value);",onkeyup="$('#portfolio').dataTable().fnFilter(this.value);")
                    th
                    th
                    th(align="right")
                    th
                    th(align="right")
                    th(align="right")
                    th(align="right")
                    th(align="right")
                    th(align="right")
    div#TransactionView(align="center",class="overlay",style="display:none")
        br
        table#transactions.dispaly(width='90%' align='center')
            thead
                tr
                    th Date
                    th Qty
                    th Price
                    th Amount
                    th P&L
            tbody
