script(src='js/regression.js')
div#Regression
    input(type="search" id="RegressionTarget" list="tickers" onkeypress="if (event.keyCode==13) { run_regress(); }"  placeholder="Strategy" size="8")
    select#RegressionTargetCountry(onkeypress="if (event.keyCode==13) run_regress(); " )
        option K2 
        option CFTC
    input(type="search" id="RegressionRegressor" list="tickers" onkeypress="if (event.keyCode==13) { run_regress(); }"  placeholder="Regressor" size="8")
    select#RegressionRegressorCountry(onkeypress="if (event.keyCode==13) run_regress(); " )
        option K2 
        option CFTC
    | &nbsp;Observation 
    input(type="number",id="RegressionDays",onkeypress="if (event.keyCode==13) { run_regress(); }",value="30",style="width:40px" min="2" max="999")
    | &nbsp;AsOf
    input(type="date",id="RegressionAsOf" onchange="regressionasof_onchange.bind(this)();")
    | &nbsp;RegressionDate
    input(type="date",id="RegressionDate" onkeypress="if (event.keyCode==13) { run_regress(); }")
    input(type="button" value="Run" onclick="run_regress();")
    div#RegressionAccordion
        h3 Regression Result 
        div
            table(style="width:100%")
                tr
                    td(style="width: 75%")
                        input(type="range" id="RegressionSlider" name="points" min="0" max="90" value="0" onchange="filter_data(parseFloat(this.value))")
                        input(type="number" id="ObservationLag" size="2" value="0" min="0" max="1000" readonly) 
                        | days ago
                        div#RegressionChart(style="width: 100%")
                    td(valign="top")
                        table#RegressionResult.display(cellpadding="0" cellspacing="0" border="0" align="center")
                            thead
                                tr
                                    th Statistic
                                    th Result
                            tbody
        h3 Regression zScore
        div
            table(width="90%" align="center")
                tr
                    td
                        div#RegressionZScoreChart(style="width: 90%")
        h3 DMA zScore 
        div
            table(width="90%" align="center")
                tr
                    td
                        div#RegressionSMAZScoreChart(style="width: 90%")
        h3 Historical correlation
        div
            table(width="90%" align="center")
                tr
                    td
                        div#RegressionHistoricalCorrelation(style="width: 1000px")
        h3 Tablular Data Format
        div
            table#RegressionOutput.display(width="95%" cellpadding="0" cellspacing="0" border="0" align="center")
                thead
                    tr
                        th Date 
                            a(href='#')
                                img#RegressionDownload(src='images/excel.png',width="18")
                        th Strategy (y)
                        th Regressor (x)
                        th dy
                        th dx
                        th y^
                        th y-x
                        th y^-x
                        th z-score
                tbody
        h3 Info/Help
        div.
            help
            
            
